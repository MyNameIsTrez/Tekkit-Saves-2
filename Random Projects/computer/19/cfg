-- EDITABLE VARIABLES --------------------------------------------------------

-- The name of the animation to load, without '.txt' at the end. '[' and ']' are reserved characters for the frame count at the end of the name, like 'dog 1 [5]'.
--fileName = "nakeyjakey esports [20593]"
--fileName = "never gonna give you up [5301]"
--fileName = "cat falls off wheelchair [89]"
--fileName = "scatmans world [6407]"
--fileName = "you just got vectored 2 [1]"
--fileName = "you just got vectored [1]"
--fileName = "finding dory [13]"
--fileName = "finding dory large [13]"
fileName = "flowers [1]"
--fileName = "backstroke of the west [251924]"
--fileName = "scatmans world large [6407]"
--fileName = "dog 1 [5]"
--fileName = "earth dog [72]"
--fileName = "albedo [1]"

-- "desktop" or "laptop".
computerType = "laptop"

-- Whether the program displays the frame count.
showFrameCounter = true

-- Whether the program loops the animation.
loop = true

-- The top-left corner where the animation will be drawn from.
playArea = { X = 1, Y = 1 }

-- Whether the program sleeps between drawing each frame, by frameSleep number of seconds.
frameSleeping = true

-- Seconds of sleeping between frames, -1 is no sleeping.
frameSleep = 0.05

-- How many frames are skipped between sleeping.
-- Setting to 0 or 1 means every frame has a sleep.
-- If frameSleeping is set to false, there is never any sleeping.
frameSleepSkipping = 1.5

-- How many frames can be written to a generated code file in .generatedCodeFiles/ before a new generatedCode file gets created.
maxFramesPerGeneratedCodeFile = 100

-- Whether to start playing the animation by default. Can be used to exit the while loop of generatedCode being ran.
playAnimationBool = true

-- Lever can be pulled to turn off the animation program.
leverSide = "right"