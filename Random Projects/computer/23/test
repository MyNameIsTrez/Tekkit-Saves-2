width, height = term.getSize()

term.clear()

local tab = {}

local modifiedWidth = width - 1

for y = 1, height do
  for x = 1, modifiedWidth do
    local char
    if math.random() > 0.5 then
      char = ' '
    else
      char = '1'
    end
    
    table.insert(tab, char)
  end
  
  if y < height then
    table.insert(tab, '\n')
  end
end

local str = table.concat(tab)

term.setCursorPos(1, 1)

write(str)

term.setCursorPos(1, 1)
